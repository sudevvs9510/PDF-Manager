{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended" // Add React recommended rules
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react", // Include the React plugin
    "react-hooks" // Include the React Hooks plugin
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "react/react-in-jsx-scope": "off" // Disable this if you're using React 17+
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  }
}

